{
  "extends": "@1inch/tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "@1inch/sdk-shared": ["typescript/shared/src/index.ts"],
      "@1inch/aqua-sdk": ["typescript/aqua/src/index.ts"],
      "@1inch/cross-chain-sdk": ["typescript/cross-chain/src/index.ts"],
      "@1inch/fusion-sdk": ["typescript/fusion/src/index.ts"],
      "@1inch/limit-order-sdk": ["typescript/limit-order/src/index.ts"],
      "@contracts/*": ["dist/contracts/*"],
      "@1inch/swap-vm-sdk": ["typescript/swap-vm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "build", ".nx"]
}
