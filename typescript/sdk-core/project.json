{
  "name": "sdk-core",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "sdk-core/src",
  "projectType": "library",
  "tags": ["typescript", "core"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "sdk-core",
        "commands": ["tsdown"]
      }
    },
    "node-version": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "sdk-core",
        "commands": ["node -e \"console.log(process.version)\""]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "coverage": true,
        "reportsDirectory": "../coverage/sdk-core"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["sdk-core/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p sdk-core/tsconfig.json"
      }
    }
  }
}
