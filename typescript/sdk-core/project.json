{
  "name": "sdk-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "sdk-core/src",
  "projectType": "library",
  "tags": ["typescript", "core"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["tsdown"]
      }
    },
    "node-version": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "typescript/sdk-core",
        "commands": ["node -e \"console.log(process.version)\""]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "coverage": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["typescript/sdk-core/**/*.ts"],
        "eslintConfig": "typescript/eslint.config.mjs"
      },
      "outputs": ["{options.outputFile}"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p typescript/sdk-core/tsconfig.json"
      }
    }
  }
}
